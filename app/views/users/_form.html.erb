<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= tag.h1 form_title %>
  <div class="mb-3">
    <%= form.label :email, style: "display: block", class: "form-label" %>
    <%= form.text_field :email, class: "form-control" %>  
  </div>

  <div class="mb-3">
    <%= form.label :username, style: "display: block", class: "form-label" %>
    <%= form.text_field :username, class: "form-control" %>  
  </div>

  <div class="mb-3">
    <%= form.label :password, style: "display: block", class: "form-label" %>
    <%= form.text_field :password, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :password_confirmation, style: "display: block", class: "form-label" %>
    <%= form.text_field :password_confirmation, class: "form-control" %>
  </div>

  <div>
    <%= form.submit "Save user", class: "btn btn-primary" %>
    <%= link_to "Back to main page", root_path, class: "mx-4" %>
  </div>
<% end %>
