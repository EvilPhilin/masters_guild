<%= form_with(model: dict_body) do |form| %>
  <% if dict_body.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(dict_body.errors.count, "error") %> prohibited this body from being saved:</h2>

      <ul>
        <% dict_body.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<%= tag.h1 form_title %>
<div class="mb-3">
  <%= form.label :name, style: "display: block", class: "form-label" %>
  <%= form.text_field :name, class: "form-control" %>  
</div>

<div class="mb-3">
  <%= form.label :description, style: "display: block", class: "form-label" %>
  <%= form.text_area :description, class: "form-control" %>
</div>

<div class="mb-3">
  <%= form.label :price, style: "display: block", class: "form-label" %>
  <%= form.number_field :price, step: 0.01, class: "form-control" %>
</div>

<div>
  <%= form.submit "Save body", class: "btn btn-primary" %>
  <%= link_to "Back to bodies", dict_bodies_path, class: "mx-4" %>
</div>

<% end %>